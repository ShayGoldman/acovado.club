{
  "name": "@modules/db",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageManager": "bun@1.1.36",
  "scripts": {
    "build:code": "bun build src/index.ts --outdir dist --target node",
    "build:declarations": "tsup src/index.ts --dts-only --out-dir dist",
    "build:migrations": "drizzle-kit generate",
    "build": "bun run build:code && bun run build:declarations && bun run build:migrations",
    "dev": "bun run build:code --watch & bun run build:declarations --watch",
    "clean": "rm -rf .turbo && rm -rf dist && rm -rf node_modules",
    "typecheck": "bun tsc --noEmit",
    "lint": "bun eslint --fix .",
    "format": "bun prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modules/logger": "workspace:*",
    "drizzle-orm": "^0.36.3",
    "drizzle-zod": "^0.5.1",
    "pg": "^8.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@config/eslint": "workspace:*",
    "@config/prettier": "workspace:*",
    "@config/tsconfig": "workspace:*",
    "@config/typescript": "workspace:*",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.28.1",
    "tsup": "^8.3.5",
    "type-fest": "^4.28.0"
  }
}
