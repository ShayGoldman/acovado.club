{
  "name": "@apps/ana-liese",
  "version": "0.1.2",
  "packageManager": "bun@1.1.36",
  "scripts": {
    "build": "bun build src/index.ts --outdir lib --target node",
    "debug": "bun --inspect=localhost:16002/ana-liese src/index.ts",
    "dev": "bun --watch src/index.ts",
    "lint": "bun eslint --fix .",
    "format": "prettier --write .",
    "clean": "rm -rf .turbo && rm -rf lib && rm -rf node_modules"
  },
  "devDependencies": {
    "@config/eslint": "workspace:*",
    "@config/prettier": "workspace:*",
    "@config/tsconfig": "workspace:*",
    "@config/typescript": "workspace:*",
    "@types/bun": "^1.1.13"
  },
  "dependencies": {
    "@modules/db": "workspace:*",
    "@modules/events": "workspace:*",
    "@modules/logger": "workspace:*",
    "@modules/tracing": "workspace:*",
    "env-var": "^7.5.0",
    "zod": "^3.23.8"
  }
}
