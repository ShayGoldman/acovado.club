{
  "name": "@tests/simulation",
  "version": "0.1.0",
  "description": "CLI tool to simulate stock market signal events by publishing them to RabbitMQ.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageManager": "bun@1.1.36",
  "scripts": {
    "start": "bun dist/index.js --",
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun run build --watch",
    "clean": "rm -rf .turbo && rm -rf dist && rm -rf node_modules",
    "typecheck": "bun tsc --noEmit",
    "lint": "bun eslint --fix .",
    "format": "bun prettier --write ."
  },
  "keywords": [
    "cli",
    "simulation",
    "stock-market",
    "rabbitmq"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modules/db": "workspace:*",
    "@modules/logger": "workspace:*",
    "@modules/events": "workspace:*",
    "@modules/tracing": "workspace:*",
    "commander": "^11.1.0",
    "dotenv": "^16.4.7",
    "date-fns": "^2.30.0",
    "inquirer": "^9.3.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@config/eslint": "workspace:*",
    "@config/prettier": "workspace:*",
    "@config/tsconfig": "workspace:*",
    "@config/typescript": "workspace:*"
  }
}